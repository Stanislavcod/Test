@model Test.ViewModels.BooksModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Доступные книги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Доступные книги</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Код книги</th>
                <th>Название</th>
                <th>Автор</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.AvailableBooks)
            {
             
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Name</td>
                        <td>@book.Author</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container mt-5">
    <h2 class="text-center">Мои книги</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Код книги</th>
                <th>Название</th>
                <th>Автор</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.BorrowerBooks)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<form method="post" action="@Url.Action("TakeBook", "Book")" class="mt-3">
    <div class="form-group">
        <label for="takeBookId">ID книги для взятия:</label>
        <input type="text" class="form-control" id="takeBookId" name="id">
    </div>
    <button type="submit" class="btn btn-primary">Взять книгу</button>
</form>

<form method="post" action="@Url.Action("ReturnBook", "Book")" class="mt-3">
    <div class="form-group">
        <label for="returnBookId">ID книги для сдачи:</label>
        <input type="text" class="form-control" id="returnBookId" name="id">
    </div>
    <button type="submit" class="btn btn-primary">Сдать книгу</button>
</form>

<a href="@Url.Action("CreateBook", "Book")" class="btn btn-success mt-3" target="_blank">Добавить книгу</a>

<a href="@Url.Action("Readers", "User")" class="btn btn-success mt-3" target="_blank">Читатели</a>

<a href="@Url.Action("Accounting", "BookLoan")" class="btn btn-success mt-3" target="_blank">Выдача книг</a>

<a href="@Url.Action("Storage", "Book")" class="btn btn-success mt-3" target="_blank">Хранение книг</a>
