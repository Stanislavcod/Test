@model Model.Model.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Создание книги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Создание новой книги</h2>
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Name">Название книги:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Author">Автор:</label>
                            <input asp-for="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Создать книгу</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

